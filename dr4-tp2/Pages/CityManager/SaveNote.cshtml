@page
@model dr4_tp2.Pages.CityManager.SaveNoteModel
@{
    ViewData["Title"] = "Salvar Nota";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                @if (Model.IsSubmitted && !string.IsNullOrEmpty(Model.FileName))
                {
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Documento salvo com sucesso!</h4>
                        <p class="mb-2"><strong>Nome do arquivo:</strong> @Model.FileName</p>
                        <hr>
                        <a href="@Model.DownloadUrl" class="btn btn-success" download>
                            Download
                        </a>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Content" class="form-label">Conte√∫do:</label>
                        <textarea asp-for="Input.Content"
                                  class="form-control"
                                  rows="10"
                                  placeholder="Digite aqui..."></textarea>
                        <span asp-validation-for="Input.Content" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
