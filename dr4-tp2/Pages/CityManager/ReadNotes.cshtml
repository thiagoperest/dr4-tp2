@page "{fileName?}"
@model dr4_tp2.Pages.CityManager.ReadNotesModel
@{
    ViewData["Title"] = "Ler Notas";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                @if (!Model.FileNames.Any())
                {
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">Nenhum arquivo encontrado</h4>
                        <p class="mb-0">Não há arquivos .txt na pasta files.</p>
                        <hr>
                        <a asp-page="/CityManager/SaveNote" class="btn btn-primary">
                            Criar nota
                        </a>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-4">
                            <h5>Arquivos:</h5>
                            <div class="list-group">
                                @foreach (var file in Model.FileNames)
                                {
                                    <a asp-page="/CityManager/ReadNotes"
                                       asp-route-fileName="@file"
                                       class="list-group-item list-group-item-action @(file == Model.SelectedFileName ? "active" : "")">
                                        @file
                                    </a>
                                }
                            </div>
                        </div>
                        <div class="col-md-8">
                            @if (!string.IsNullOrEmpty(Model.SelectedFileName))
                            {
                                <h5>Conteúdo de: @Model.SelectedFileName</h5>
                                <div class="card">
                                    <div class="card-body">
                                        <pre class="mb-0"
                                             style="white-space: pre-wrap; word-wrap: break-word;">@Model.FileContent</pre>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <a href="/files/@Model.SelectedFileName" class="btn btn-success" download>
                                        Download
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="text-muted text-center mt-5">
                                    <h5>Selecione um arquivo para visualizar</h5>
                                    <p>Clique em um arquivo para ver seu conteúdo.</p>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
